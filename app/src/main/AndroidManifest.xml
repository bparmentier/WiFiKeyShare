<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.brunoparmentier.wifikeyshare">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="be.brunoparmentier.wifikeyshare.activities.WifiListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.brunoparmentier.wifikeyshare.activities.WifiNetworkActivity"
            android:label="@string/title_activity_wifi_network"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
